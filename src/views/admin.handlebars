<div>
    {{#if user}}
    <h1>Bienvenido administrador {{user.name}}</h1>
    <br>
    <h2>Tus datos:</h2>
    <br>
    <p>{{user.name}}</p>
    <br>
    <p>{{user.age}}</p>
    <br>
    <p>{{user.email}}</p>
    <br>
    <p>{{user.role}}</p>
    <br>
    {{!-- Agregar un producto --}}
    <section>
        <h1>Agregar un producto</h1>
        <form id="formCrearProducto">
            <label for="title">Título:</label>
            <input type="text" id="title" name="title" required>

            <label for="description">Descripcion:</label>
            <input type="text" id="description" name="description" required>

            <label for="code">Code:</label>
            <input type="text" id="code" name="code" required>

            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" required>

            <label for="activo">Activo:</label>
            <select id="activo" name="activo">
                <option value="true">Sí</option>
                <option value="false">No</option>
            </select>

            <label for="stock">Stock:</label>
            <input type="number" id="stock" name="stock" required>

            <label for="category">Categoria:</label>
            <input type="text" id="category" name="category" required>

            <label for="image">Imagen:</label>
            <input type="url" id="image" name="image">

            <button type="submit">Crear producto</button>
        </form>
    </section> 
    {{else}}
    <h1>Usted no ha iniciado la sesion...</h1>
    <br>
    <p>Inicie sesion para ver su perfil:</p>
    <a href="/views/users/login">Log-In</a>
    <br>
    <p>Si no esta registrado, registrese:</p>
    <a href="/views/users/register">Registrarse</a>
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/adminproducts.js"></script>