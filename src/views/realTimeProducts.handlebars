{{!-- Agregar un producto --}}
<section>
    <h1>Agregar un producto</h1>
    <form id="formCrearProducto">
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" required>

        <label for="description">Descripcion:</label>
        <input type="text" id="description" name="description" required>

        <label for="code">Code:</label>
        <input type="text" id="code" name="code" required>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" required>

        <label for="activo">Activo:</label>
        <select id="activo" name="activo">
            <option value="true">Sí</option>
            <option value="false">No</option>
        </select>

        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required>

        <label for="category">Categoria:</label>
        <input type="text" id="category" name="category" required>

        <label for="image">Imagen:</label>
        <input type="url" id="image" name="image">

        <button type="submit">Crear producto</button>
    </form>
</section>

{{!-- Renderizar la lista de los productos --}}
<section>
    <h1>Lista de productos</h1>
    {{#if products.length}}
        <ul id="listaProductos" class="flex">
            {{#each products}}
                <li class="films">
                    <h3>Titulo: {{this.title}}</h3>
                    <p>Descripcion: {{this.description}}</p>
                    <p>Codigo: {{this.code}}</p>
                    <p>Precio: ${{this.price}}</p>
                    <p>Estado: {{this.status}}</p>
                    <p>Stock: {{this.stock}}</p>
                    <p>Categoria: {{this.category}}</p>
                    <img class="poster" src="{{#if this.image}}{{this.image}}{{else}}{{this.thumbnails}}{{/if}}" alt="{{this.title}}">
                </li>
            {{/each}}
        </ul>
        {{else}}
            <p>No hay productos disponibles.</p>
    {{/if}}
</section>

<section class="navNumber">
    <div>{{#if hasPrevPage}}
        <a href={{prevLink}}>Pagina anterior <<</a>
        {{/if}}
    </div>
    <span>{{this.page}}</span>
    <div>{{#if hasNextPage}}
        <a href={{nextLink}}>>> Pagina siguiente </a>
        {{/if}}
    </div>
</section>

